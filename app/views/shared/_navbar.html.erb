<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="d-flex align-self-end">
      <div><%= image_tag "Bentomo-logo.svg" %></div>
      <h2 class="mx-3 logo-text">Bentomo</h2>
    </div>
  <% end %>

  <!-- button for responsive -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <!-- button for responsive -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="d-flex">

      <!-- search button start -->
      <button name="button" type="submit" class="btn navbar-text">
        <i class="fas fa-search"></i>
      </button>
      <!-- search button end -->

      <!-- location button start -->
      <button name="button" type="submit" class="btn nav-search navbar-text">
        <i class="fas fa-map-marker-alt"></i>
      </button>
      <!-- location button start -->

      <!-- my order start -->
      <div><%= link_to "My orders", orders_path, class: "nav-link navbar-text" %></div>
      <!-- my order end -->

      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag "doug.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Setting",  edit_user_registration_path, class: "dropdown-item navbar-text" %>
              <%= link_to "Create a kitchen", "#", class: "dropdown-item navbar-text" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item navbar-text" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link navbar-text" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
