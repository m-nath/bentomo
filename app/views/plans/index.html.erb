
<h1>Plans</h1>

<!-- this is search bar start-->

  <%= form_tag plans_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a meal plan"
    %>
    <%= submit_tag "Search", class: "btn btn-secondery" %>
  <% end %>

<!-- this is search bar end-->


<div class="container">
  <% @plans.each do |plan|%>
    <ul>
      <li><%= plan.name %></li>
      <%= cl_image_tag plan.photo, width: 200, height: 100, crop: :fill %>
      <li><%= plan.description %></li>
      <li><%= plan.price %></li>
      <li><%= link_to "Details", plan_path(plan) %></li>
    </ul>
  <% end %>
</div>

  <%= link_to "check the kitchen", kitchens_path, class: "btn btn-secondery" %>
  <%= link_to "Home", root_path, class: "btn btn-secondery" %>
