<button type="button" class="d-flex align-items-end btn btn-secondery mb-2" data-toggle="modal" data-target="#plan_form" data-whatever="@getbootstrap">
  <i class="fas fa-edit"></i>
</button>

  <div class="modal fade" id="plan_form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLabel">Edit your plan</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for(@plan) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-inputs">
              <%= f.input :name, placeholder: @plan.name %>
              <%= f.input :description, placeholder: @plan.description%>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
            <div class="form-actions d-flex justify-content-between">
              <%= f.button :submit, class: "btn btn-main" %>
              <%= link_to 'Back', kitchen_path(@plan.kitchen), class: 'btn btn-secondery'%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
