<%= simple_form_for ([@kitchen, @plan]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Your plan name' %>
    <%= f.input :tag_list %>
    <%= f.input :description, placeholder: 'Describe your plan' %>
    <%= f.input :price, as: :integer, label:'Price per day'%>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-actions d-flex justify-content-between">
    <%= f.button :submit, class: "btn-main" %>
    <%#= link_to 'Home', plans_path, class: "back-button"%>
  </div>
<% end %>
