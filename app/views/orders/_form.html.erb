<% if user_signed_in? %>
  <div class="form-group mt-3">
    <%= simple_form_for([plan, Order.new]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="d-flex">
        <div class="form-inputs">
          <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker fa"}, placeholder:"\uF784 Choose dates", label:false %>
        </div>
        <div class="mx-4">
          <%= f.button :submit, "Order", class: "btn btn-main d-flex align-items-end plan-button" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="d-flex align-items-end">
    <%= link_to humanized_money_with_symbol(plan.price)+'/day ORDER', new_user_session_path, class:'btn btn-main' %>
  </div>
<% end %>
