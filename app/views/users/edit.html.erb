<div class="container my-4">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="d-flex justify-content-center">Edit Profile</h2>
      <%= simple_form_for(@user) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :first_name,
                      required: true %>
          <%= f.input :last_name,
                      required: true %>
          <%= f.input :default_location, collection: @locations, as: :radio_buttons, label_method: :full_label, value_method: :full_label %>
          <%= f.input :radius, input_html: { value: 5 }, collection: 0..100 %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :preference,
                      hint: "we will let the kitchens know your preferences",
                      required: false %>
        </div>
        raise
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Update", class: "btn btn-long" %>
        </div>
      <% end %>
      <br>
      <%= link_to "Back", root_path %>
    </div>
  </div>
</div>