<div class='demo-result-label'>
  <div class='col-12'>
    <section class='performance-facts' id='performance-facts'>
      <div class='performance-facts__header'>
        <h1 class='performance-facts__title'>Nutrition Facts</h1>
      </div>
      <table class='performance-facts__table'>
        <thead>
          <tr>
            <th colspan='3' class='amps'>Amount Per Serving</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th colspan='2' id='lkcal-val-cal'><b>Calories</b></th>
            <td class='nob'><%= @calories %> </td>
          </tr>
          <tr class='thick-row'>
          </tr>
          <tr>
            <th colspan='2'><b>Total Fat</b> </th>
            <td><b><%= @fat%> g</b></td>
          </tr>
          <tr>
            <th colspan='2'><b>Total Carbohydrate</b></th>
            <td><b><%= @carbs %> g</b></td>
          </tr>
          <tr class='thick-end'>
            <th colspan='2'><b>Protein</b></th>
            <td><b><%= @protein %> g</b></td>
          </tr>
        </tbody>
      </table>
      <p class='small-info' id='small-nutrition-info'>*Percent Daily Values are based on a 2000 calorie diet</p>
    </section>
  </div>
</div>