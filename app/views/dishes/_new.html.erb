<button type="button" class="" data-toggle="modal" data-target="#new_dish_form" data-whatever="@getbootstrap">
  <p>Create a new dish</p>

</button>
<div class="modal fade" id="new_dish_form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Create a new dish</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for ([@kitchen, Dish.new]) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :name, as: :string, required: true, placeholder:'enter the dish name' %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden, required: true%>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondery" data-dismiss="modal">Close</button>
            <%= form_tag orders_path do %>
              <%= hidden_field_tag 'kitchen_id', @kitchen.id %>
              <%= submit_tag 'Create', class: 'btn btn-main' %>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
