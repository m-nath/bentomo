<button type="button" class="btn btn-main" data-toggle="modal" data-target="#new_dish_form" data-whatever="@getbootstrap">
  <p class="kill-margin">Create a new dish</p>
</button>
<div class="modal fade" id="new_dish_form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Create a new dish</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="ingr_form">
          <%= simple_form_for :dish, url: fetch_ingredients_path, remote: true do |f| %>
            <div class="form-inputs">
              <%= f.input :name, as: :string, required: true, placeholder:'enter the dish name' %>
              <%= f.input :ingr, as: :text, placeholder:'write the ingredients so we will calculate nutrition details for you' , label: 'ingredient' %>
              <%= hidden_field_tag 'kitchen_id', @kitchen.id %>
              <%= f.submit "fetch ingredients" , class: "btn btn-main"%>
            </div>
          <% end %>
        </div>
        <div class='row no-gutters'>
          <div id="dish-form" class='col-12 col-sm-6 col-md-6'>
          </div>
          <div id='ingr' class='col-12 col-sm-6 col-md-6'>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondery" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
